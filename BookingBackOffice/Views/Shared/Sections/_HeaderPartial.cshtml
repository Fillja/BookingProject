<header class="bg-coal">
    <div class="container">

        <div class="logo-container">
            <a asp-controller="Home" asp-action="Index">
                <img src="~/images/logo-light.png" alt="BookingBackOffice" />
            </a>
        </div>

        <nav class="link-container tablet-hidden">
            <a class="link @(ViewContext.RouteData.Values["controller"]!.ToString() == "Home" ? "active-link" : "")" asp-controller="Home" asp-action="Index">Home</a>
            <a class="link @(ViewContext.RouteData.Values["controller"]!.ToString() == "Bookings" ? "active-link" : "")" asp-controller="Booking" asp-action="Index">Bookings</a>
            <a class="link @(ViewContext.RouteData.Values["controller"]!.ToString() == "Seatings" ? "active-link" : "")" asp-controller="Seatings" asp-action="Index">Seatings</a>
            <a class="link @(ViewContext.RouteData.Values["controller"]!.ToString() == "Tables" ? "active-link" : "")" asp-controller="Tables" asp-action="Index">Tables</a>
            <a class="link @(ViewContext.RouteData.Values["controller"]!.ToString() == "Chairs" ? "active-link" : "")" asp-controller="Chairs" asp-action="Index">Chairs</a>
        </nav>

        <div class="account-container">
            <a class="icon-wrapper" asp-controller="Account" asp-action="Index"><i class="fa-solid fa-user"></i></a>
            <a class="icon-wrapper" asp-controller="Account" asp-action="Logout"><i class="fa-solid fa-arrow-right-from-bracket"></i></a>
        </div>
    </div>
</header>